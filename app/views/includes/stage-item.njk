{% macro stageItem(params) %}
    <li class="page-flow-item--stage">

        {{ params.name }}

        {%- if params.stage.versions[0] %}
            <ol class="page-flow--pages">
                {% for page in params.stage.versions[0].pages %}
                    {% from "includes/page-item.njk" import pageItem %}
                    {{ pageItem({
                        page: page
                    }) }}
                {% endfor %}
            </ol>
        {% endif -%}

    </li>
{% endmacro %}